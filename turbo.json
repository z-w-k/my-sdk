{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
    },
    "dev": {
      "cache": false,
      "persistent": true,
    },
    "lint": {
      "dependsOn": [],
    },
    "test": {
      "dependsOn": [],
      "cache": false,
      "persistent": false
    },
    "clean": {
      "cache": false
    }
  }
}
